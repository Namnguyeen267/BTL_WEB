@model IEnumerable<BTL_WEB.Models.Posts>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <span>Tác giả</span>
            </th>
            <th>
                <span>Thể loại</span>
            </th>
            <th>
                <span>Ảnh</span>
            </th>
            <th>
                <span>Từ khóa</span>
            </th>
            <th>
                <span>Tin hot</span>
            </th>
            <th>
                <span>Tin mới</span>
            </th>
            <th>
                <span>Đã xác nhận</span>
            </th>
            <th>
                <span>Thời gian tạo</span>
            </th>
            <th>
                <span>Thời gian đăng</span>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Account.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryDescription)
            </td>
            <td>
@*                 @Html.DisplayFor(modelItem => item.ImageUrl) *@
                   
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Keyword)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isHot)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isNewfeed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isAccept)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Published)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.PostID">Edit</a> 
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.PostID">Details</a> 
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.PostID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
