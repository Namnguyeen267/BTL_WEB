@model IEnumerable<BTL_WEB.Models.Categories>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
           <th>
               <span>
                   Mã Loại
               </span>
           </th>
            <th>
                <span>
                   Tên thể loại
                </span>
            </th>
            <th>
                <span>
                    Mô tả
                </span>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryDescription)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.CategoryId">Edit</a> 
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.CategoryId">Details</a> 
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CategoryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>