@model Accounts
<link href="~/css/Style1.css" rel="stylesheet">

@{
    Layout = null;
}
<div class="container ">
    <div class="l-form">
        <form class="form">
            <h1 class="form__title">
                Register
            </h1>
            <div class="form__div">
                <input type="text" asp-for="Username" class="form__input form__input-username" />
                <label class="form__label">Username</label>
            </div>
            <div class="form__div">
                <input type="text" asp-for="FullName" class="form__input form__input-username" />
                <label class="form__label">FullName</label>
            </div>
            <div class="form__div">
                <input type="text" asp-for="PhoneNumber" class="form__input form__input-username" />
                <label class="form__label">PhoneNumber</label>
            </div>
            <div class="form__div">
                <input type="text" asp-for="Email" class="form__input form__input-username" />
                <label class="form__label">Email</label>
            </div>          
            <div class="form__div">
                <input type="password" asp-for="Password" class="form__input form__input-pass" />
                <label class="form__label">Password</label>
                <div class="form__view-pass">
                    <i class="uil uil-eye form__icon form__icon-view"></i>
                </div>
            </div>
            <div class="form__div">
                <input type="password" asp-for="ConfirmPassword" class="form__input form__input-pass" />
                <label class="form__label">ConfirmPassword</label>
                <div class="form__view-pass">
                    <i class="uil uil-eye form__icon form__icon-view"></i>
                </div>
            </div>
            <span class="form__register">
                Bạn đã có tài khoản?<a class="form__register-link" href="/Home/Login"> Login</a>
            </span>
            <span id="notice" runat="server"></span>
            <input type="submit" class="form__button" name="name" value="Sign In" />
        </form>
    </div>

</div>